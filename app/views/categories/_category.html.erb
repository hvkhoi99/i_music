<li id="category-<%= category.id %>">
  <span class="name"><label>Name:</label> <%= category.name %></span></br>
    <% if admin? %>
      <span class="edit">
        <%= link_to "Edit", edit_category_path(category.id) , class: "btn btn-primary"%>
        <%= link_to "Delete", category, method: :delete, data: { confirm: "You sure?" } , class: "btn btn-primary"%>
      </span>
    <% end %>
</li>
